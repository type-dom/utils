{
  "name": "nx-workspace",
  "version": "independent",
  "license": "MIT",
  "scripts": {
    "build": "nx run-many -t build",
    "build:since": "nx affected -t build",
    "lint": "nx run-many -t lint",
    "lint-fix": "nx run-many -t lint-fix",
    "test": "nx run-many -t test",
    "test:since": "nx affected -t test",
    "serve": "nx run-many -t serve",
    "release": "cross-env HUSKY_BYPASS=true lerna publish"
  },
  "private": true,
  "devDependencies": {
    "@commitlint/cli": "^17.8.0",
    "@commitlint/config-conventional": "^17.8.0",
    "@nx/eslint-plugin": "^17.0.0",
    "cross-env": "^7.0.3",
    "husky": "^8.0.3",
    "lerna": "^7.4.1",
    "nx": "^17.0.0",
    "nx-cloud": "latest"
  },
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "volta": {
    "node": "18.17.1"
  },
  "husky": {
    "hooks": {
      "commit-msg": "[[ -n $HUSKY_BYPASS ]] || commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "@nx/devkit": "^17.0.0"
  }
}
