{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": false,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "type-dom.ts": ["libs/type-dom/src/index.ts"],
      "type-node-parser": ["libs/type-node-parser/src/index.ts"],
      "type-utils": ["libs/type-utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
